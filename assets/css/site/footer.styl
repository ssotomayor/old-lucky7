/* Footer */
footer
  background #2b2b2b
  border-top 1px solid #333
  box-shadow 0 -1px 0 rgba(#000,.3)
  color #fff
  bottom 0
  width 100%
  height 40px
  padding 0 20px
  box-sizing border-box

.footer-nav
  li
    display inline-block
    a
      color #848381
      padding 0 10px
      display block
      height 40px
      line-height 40px
      &:hover
        color #fff
        background linear-gradient(rgba(#000,0), rgba(#000,.1))