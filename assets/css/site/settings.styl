
#login
  padding 100px 20px
  .page
    width 40%
    margin 0 auto
    .field
      input
        width 200px

#settings
#login
  .page
    background #fff
    box-shadow 0 2px 2px rgba(#000,.3)
    box-sizing border-box
    border-radius 3px
  .field
    padding 20px
    clearfix()
    border-bottom 1px solid #ddd
    &:last-child
      border-bottom 0
    &.actions
      margin-left 100px
      padding 10px 20px

  .username-field
  .password-field
    padding 10px 20px 
    .label
      line-height 38px
  
  .password-field
    input
      margin-right 10px
      float left
    #set-password-bt
      @extend .btn
      @extend .btn.primary
      float left

  .label
    width 100px
    float left
  .switch
    appearance checkbox
    box-sizing(border-box)
    opacity 0
    &:checked
      & ~ label
        &:before
          content "ON"
          text-align left
          color #fff
          background-color #007a59
        &:after
          left 26px
          color #6c6
    & ~ label
      position absolute
      height 24px
      width 50px
      line-height 24px
      margin 0
      cursor pointer
      user-select(none)
      &:after, &:before
        position absolute
        display block
        top 0
        bottom 0
        font-weight bold
        content ""
        font-size 12px
        line-height 25px
        width 100%
        text-align right
        box-sizing border-box
        color darken($red, 60%)
        background-color $red
        border-radius 20px
        box-shadow inset 0 1px 1px rgba(#000,.2)
      &:before
        padding 0 7px
      &:after
        position absolute
        content ""
        width 16px
        height 16px
        margin 4px
        text-align center
        left 0
        color #f88
        background-color #fff
        border-radius 24px
        box-shadow inset 0 -1px 0 rgba(#000,.15)
        transition all 100ms ease-in