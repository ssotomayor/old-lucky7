.content-con
  background #f9f9f9
  box-shadow 0 1px 2px rgba(#000,.3)
  border 1px solid #013b2b 
  border-radius 4px
  
/* Form inputs */
input[type="text"], input[type="password"], input[type="number"], input[type="url"]
  display inline-block
  vertical-align middle
  box-shadow inset 0 1px 0 rgba(#000,.05)
  border-radius 2px
  padding 10px
  border 1px solid #ccc
  background-color #fff
  box-sizing(border-box)
  transition(all, linear, .2s)
  &:focus
    box-shadow inset 0 0 0 1px $blue
    border-color $blue
    outline 0

input[readonly]
  cursor not-allowed

.input-currency
  position relative
  .currency
    position absolute
    left 5px
    top 5px
    bottom 5px
    color #fff
    font-size 14px
    background #444
    font-weight 500
    border-radius 2px
    padding 5px 8px
    white-space nowrap
  input[type="text"]
    .DOGE &
      padding-left 67px !important
    padding-left 50px !important
    &:focus
      background rgba($yellow,.2)

/* Buttons */
form-bt()
  background #e5e5e5
  color #444
  font-size 14px
  font-weight bold
  border-radius 3px
  border 0
  padding 10px 15px
  outline none
  user-select none
  display inline-block
  text-transform uppercase
  -webkit-font-smoothing: antialiased
  text-shadow 0 1px 2px rgba(#fff,0.3)
  &:hover
    background darken(#e5e5e5, 10%)
  &:active
    box-shadow inset 0 1px 4px rgba(#000,.3)

.btn
  form-bt()
  &.primary
    background $blue linear-gradient(rgba(#000,0),rgba(#000,.15))
    color #fff
    text-shadow 0 1px 2px rgba(#000,.5)
    &:hover
      background $blue

/* Modal */
.modal
  box-sizing border-box
  display none
  &.center
    position absolute
    left 50%
    top 50%
    height auto
    transform(translateX(-50%),translateY(-50%))
  &.show
    z-index 9999
    display block
.modal-content
  position relative
  border-radius 4px
  box-shadow 0 0 5px rgba(#000,.8)
  background-color #fff
  overflow hidden
  box-sizing: border-box
  transition(all, .3s)
.modal-header
  border-radius 4px 4px 0 0
  border-bottom 1px solid #eee
  background #f0f0f0
  text-align center
  border-bottom 1px solid #ccc
  h3
    padding 10px 15px
    line-height 20px
    font-size 18px
    text-shadow 0 1px 0 rgba(#fff,.5)
  .close-bt
    float right
    height 100%
    border-left 1px solid #ccc
    padding 10px 15px
    font-size 20px
    font-weight bold
    line-height 20px
    font-family Helvetica, Arial sans-serif
    color #777
    text-shadow 0 1px 0 #fff
    &:hover
      color $red
.modal-body
  padding 15px
  background url(CDN("/img/shattered_white.png"))
.modal-footer
  padding 15px
  background #f0f0f0
  border-top 1px solid #ccc
  text-align center
  .btn + .btn
    margin-left 5px

/* Table */
stripes(even = #f9f9f9, odd = #f0f0f0)
  background-color odd
  &:nth-child(even)
    background-color even

.table
  width 100%
  background: #fff
  overflow: hidden
  th
    font-weight bold
    background: #f0f0f0
    color $blue
    cursor pointer
    padding 10px
    text-align left
    border-right: 1px solid #ccc
    &:last-child
      border 0
    .caret 
      border-top-color: $blue
      &.up
        border-bottom-color: $blue
  tr
    stripes()
    &.heading
      border-bottom 1px solid #ccc
    &.selected
      border-color $blue
      background: $blue
      color: #fff
      box-shadow: none

  td
    padding 10px