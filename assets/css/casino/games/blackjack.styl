use("../../plugins/cdn.js")
@import '../playingcards'
@import '/cdnhash'

/* Blackjack */
.g-main-wrapper
  background: #0c6722
  background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), url(CDN("/img/casino/blackjack/bg.png"))
  background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), -webkit-radial-gradient(center, ellipse farthest-corner, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 70%, rgba(0,0,0,0.4) 100%), url(CDN("/img/casino/blackjack/bg.png"))
  background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), -moz-radial-gradient(center, ellipse farthest-corner, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 70%, rgba(0,0,0,0.4) 100%), url(CDN("/img/casino/blackjack/bg.png"))
  background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), radial-gradient(center, ellipse farthest-corner, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 70%, rgba(0,0,0,0.4) 100%), url(CDN("/img/casino/blackjack/bg.png"))
  background-repeat: no-repeat, repeat, repeat
  background-position: center 35%
  background-size: 50%, auto, auto
  box-shadow: inset 0 0 0 $spacing rgba(255,255,255,.05)
  .no-svg &
    //background-image: url("/img/casino/blackjack/blackjack-logo.png"), url("/img/casino/blackjack/bg.png")
    background-repeat: no-repeat, repeat
  .DOGE &
    background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), url(CDN("/img/casino/blackjack/bg_doge.png"))
    background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), -webkit-radial-gradient(center, ellipse farthest-corner, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 70%, rgba(0,0,0,0.4) 100%), url(CDN("/img/casino/blackjack/bg_doge.png"))
    background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), -moz-radial-gradient(center, ellipse farthest-corner, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 70%, rgba(0,0,0,0.4) 100%), url(CDN("/img/casino/blackjack/bg_doge.png"))
    background-image: url(CDN("/img/casino/blackjack/blackjack-logo.svg")), radial-gradient(center, ellipse farthest-corner, rgba(0,0,0,0) 0%, rgba(0,0,0,0.2) 70%, rgba(0,0,0,0.4) 100%), url(CDN("/img/casino/blackjack/bg_doge.png"))
  
.game-result-cnt
  height 40px
  .game-result
    margin auto 10px
    display inline-block
    z-index 2

.g-playfield
  margin-bottom 80px

.game-area
  font-size: 125%

.cards-bundle
  perspective 400px
  clearfix()

.card-score
  color #ddd
  background #2b2b2b
  font-size 14px
  display inline-block
  position absolute
  bottom 0px
  left 0
  font-weight bold
  padding 5px
  border-radius 5px
  &:empty
    display none

.card-arrow
  display none

#dealer-area
#player-area
  position relative
  text-align center
  margin-bottom 20px
  height 180px

.dealer-cards-wrap
.player-cards-wrap
  position relative
  display inline-block
  padding-bottom 35px

.player-cards-wrap  
  &.second-bundle
  &.third-bundle
  &.fourth-bundle
    margin-left 10px

/* Help */
#rules
  width: 35em